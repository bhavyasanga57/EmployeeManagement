@model EmployeeViewModel

<div class="text-center">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="~/images/BankImage.svg" alt="Card image cap" asp-append-version="true" />
        <div class="card-body">
            <h5 class="card-title text-danger">Delete Employee</h5>
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Department:</strong> @Model.Department</p>
            <p><strong>Email:</strong> @Model.Email</p>

            <h6 class="text-danger">Are you sure you want to delete this employee?</h6>

            <form asp-controller="Home" asp-action="DeleteConfirm" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
